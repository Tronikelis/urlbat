{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "lib": ["es2017", "es7", "es6", "ESNext"],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": [
        "./jest.config.ts",
        "./dist",
        "./node_modules",
        "./coverage",
        "./test",
        "./tsup.config.ts"
    ]
}
